package com.phpwind.util{	import flash.display.Bitmap;	import flash.display.BitmapData;	import flash.display.Sprite;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.ui.Mouse;	import com.phpwind.util.ResizingCursor;		public class MouseCursor	{				private static var imgMouse:Sprite;		private static var bm:Bitmap;		private static var resizingCursor:ResizingCursor = new ResizingCursor(8,8);		/**		 * 转换样式		 */		public static function changeCursor(imagePath:String):void {			bm=new Bitmap(resizingCursor,'never',true);			Mouse.hide();						//Stage.addChild(bm);			//Stage.addEventListener(MouseEvent.MOUSE_MOVE,moveMouse);		}		private static function moveMouse(e:MouseEvent):void {			bm.x=e.stageX;			bm.y=e.stageY;		}		public static function removeCursor():void {			//Stage.removeChild(bm);			//Stage.removeEventListener(MouseEvent.MOUSE_MOVE,moveMouse);			Mouse.show();		}	}}